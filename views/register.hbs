<div class="row">
    <div class="col-md-4 offset-md-4">
        {{#if flash.error}}
        <div class="alert alert-danger alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <p>{{flash.error}}</p>
            <p>Username and Email must be unique.</p>
        </div>
        {{/if}}
        <div class="signup-wall">
            {{#if errors}} {{#each errors}}
            <div class="alert alert-danger">{{this.msg}}</div>
            {{/each}} {{/if}}
            <h3 class="text-center">Register</h3>
            <form class="form" action="/signup" method="POST">
                <input class="form-control" type="text" value="{{username}}" name="username" placeholder="Username" autofocus required>
                <input class="form-control" type="email" value="{{email}}" name="email" placeholder="Email" required>
                <input class="form-control" type="text" value="{{firstname}}" name="firstname" placeholder="Firstname" required>
                <input class="form-control" type="text" value="{{lastname}}" name="lastname" placeholder="Lastname" required>
                <input class="form-control" type="text" value="{{phone}}" name="phone" placeholder="Phone number" required>
                <input class="form-control" type="password" name="password" placeholder="Password" required>
                <input class="form-control nomargin" type="password" name="confirmpassword" placeholder="Confirm Password" required>

                <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
                <span class="clearfix"></span>
            </form>
        </div>
    </div>
</div>