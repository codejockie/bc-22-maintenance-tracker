<div class="row">
    <div class="col-md-4 offset-md-4">
        <h3 class="text-center">Register</h3>
        <div class="signup-wall">
            <form class="form" action="/signup" method="POST">
                <input class="form-control" type="text" name="username" placeholder="Username" required="required" autofocus required>
                <input class="form-control nomargin" type="password" name="password" placeholder="Password" required>
                <input class="form-control" type="email" name="email" placeholder="Email" required>
                <input class="form-control" type="text" name="firstName" placeholder="Firstname" required>
                <input class="form-control" type="text" name="lastName" placeholder="Lastname" required>

                <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
                <span class="clearfix"></span>
            </form>
        </div>
        <div id="message">
        </div>
    </div>
</div>